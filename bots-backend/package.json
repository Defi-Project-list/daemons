{
  "name": "daemons.bots.backend",
  "version": "1.0.0",
  "description": "Daemons' Housekeeping Bots",
  "main": "src/index.ts",
  "scripts": {
    "test": "mocha ./**/*test.ts -r dotenv/config",
    "test:ci": "mocha ./**/*test.ts --exit",
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --exit-child --watch src src/index.ts | pino-pretty -c -i time,hostname,source -S -o '[{source}] {msg}'"
  },
  "author": "Daemons Finance",
  "license": "ISC",
  "dependencies": {
    "@daemons-fi/contracts": "0.0.12",
    "@daemons-fi/scripts-definitions": "0.1.34",
    "@daemons-fi/shared-definitions": "2.1.10",
    "@daemons-fi/db-schema": "0.0.6",
    "express": "^4.17.2",
    "cron": "2.1.0",
    "dotenv": "^16.0.0",
    "ethers": "5.7.0",
    "pino": "8.4.2",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/chai-as-promised": "^7.1.5",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "2.0.0",
    "@types/mocha": "^9.0.0",
    "@types/mongoose-unique-validator": "^1.0.5",
    "@types/node": "18.7.13",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "5.35.1",
    "@typescript-eslint/parser": "5.35.1",
    "@types/express": "^4.17.13",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "10.0.0",
    "mocha-param": "^2.0.1",
    "mongodb-memory-server": "8.9.0",
    "prettier": "^2.5.1",
    "pino-pretty": "9.1.0",
    "sinon": "14.0.0",
    "supertest": "^6.2.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.8.2"
  },
  "mocha": {
    "spec": "./**/*test.ts",
    "ignore": "./node_modules/**",
    "require": "ts-node/register/files",
    "timeout": 20000
  }
}
